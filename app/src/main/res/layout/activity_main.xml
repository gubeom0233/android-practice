<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txt_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintTop_toTopOf="parent" android:singleLine="false"
            android:padding="8dp"/>

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_input"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            android:stretchColumns="*">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="@string/cal_btn_c"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_clear"/>
            <Button
                    android:text="@string/cal_btn_bracket"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_bracket"/>
            <Button
                    android:text="@string/cal_btn_percentage"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_percentage" />
            <Button
                    android:text="@string/cal_btn_divide"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_divide"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="@string/cal_btn_7"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_7"  />
            <Button
                    android:text="@string/cal_btn_8"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_8" />
            <Button
                    android:text="@string/cal_btn_9"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_9" />
            <Button
                    android:text="@string/cal_btn_multiply"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_multiply" />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="@string/cal_btn_4"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_4"/>
            <Button
                    android:text="@string/cal_btn_5"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_5" />
            <Button
                    android:text="@string/cal_btn_6"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_6" />

            <Button
                    android:text="@string/cal_btn_sub"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_sub" />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="@string/cal_btn_1"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_1"/>
            <Button
                    android:text="@string/cal_btn_2"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_2" />
            <Button
                    android:text="@string/cal_btn_3"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_3" />
            <Button
                    android:text="@string/cal_btn_add"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_add" />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="@string/cal_btn_change"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_change" />
            <Button
                    android:text="@string/cal_btn_zero"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_zero" />
            <Button
                    android:text="@string/cal_btn_dot"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_dot" />
            <Button
                    android:text="@string/cal_btn_nun"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_nun" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>